<body>
  <div>Carregando…</div>
  <script>
  (async()=>{
    try{
      const r = await fetch('/api/me');
      if (r.status===401){ location.href='/web/login.html'; return; }
      const j = await r.json();
      const klass = (j.class||'0000000000');
      const adminDigit = klass.charAt(4); // dígito "Admin"
      if (adminDigit==='9'){ location.href='/web/admin.html'; }
      else { location.href='/web/clients.html'; }
    }catch(e){ location.href='/web/login.html'; }
  })();
  </script>
</body>
</html>
