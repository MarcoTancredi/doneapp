  <script>
    const THEMES = ["theme-a","theme-c1","theme-c2","theme-c3","theme-c4"];
    const LABELS = ["A (Glass)","C1 (Glass Gradiente)","C2 (Aurora)","C3 (Noir Neon)","C4 (Sky)"];
    const key = "login_theme";
    const body = document.body;
    let idx = 0;
    function applyTheme(i){
      THEMES.forEach(t => body.classList.remove(t));
      body.classList.add(THEMES[i]);
    }
    // carregar tema salvo
    const saved = localStorage.getItem(key);
    if (saved){
      const i = THEMES.indexOf(saved);
      if (i>=0){ idx = i; applyTheme(idx); }
    } else {
      // default: theme-c3 (Noir Neon)
      idx = 3; applyTheme(idx);
    }

    let picking = false;
    const orText = document.getElementById('orText');
    const leftLink = document.getElementById('leftLink');
    const rightLink = document.getElementById('rightLink');

    const btnLogin = document.getElementById('btnLogin');
    const prevBtn = document.getElementById('tplPrev');
    const nextBtn = document.getElementById('tplNext');

    function updateCenterLabel(){
      if (picking){
        btnLogin.textContent = `${LABELS[idx]} (${idx+1}/5)`;
      } else {
        btnLogin.textContent = "Entrar";
      }
    }

    function renderFooter(){
      document.body.classList.toggle('picking', picking);
      if (!picking){
        leftLink.textContent = "Primeiro Acesso? Cadastrar";
        rightLink.textContent = "Templates";
        leftLink.onclick = (e)=>{ e.preventDefault(); /* navegar para cadastro (futuro) */ };
        rightLink.onclick = (e)=>{ e.preventDefault(); picking = true; updateCenterLabel(); renderFooter(); };
        orText.textContent = "ou continue com";
      } else {
        leftLink.textContent = "VOLTAR";
        rightLink.textContent = "CONFIRMAR";
        leftLink.onclick = (e)=>{ e.preventDefault(); picking = false;
          const s = localStorage.getItem(key); if (s){ const i = THEMES.indexOf(s); if(i>=0){ idx=i; applyTheme(idx); } }
          updateCenterLabel(); renderFooter();
        };
        rightLink.onclick = (e)=>{ e.preventDefault(); localStorage.setItem(key, THEMES[idx]); picking = false; updateCenterLabel(); renderFooter(); };
        orText.textContent = "ou continue com";
      }
    }
    updateCenterLabel();

    // Navegação pelas setas (15%/70%/15%)
    function applyAndLabel(){
      applyTheme(idx);
      updateCenterLabel();
    }
    prevBtn.addEventListener('click', (e)=>{ if(!picking) return; idx = (idx-1+THEMES.length)%THEMES.length; applyAndLabel(); });
    nextBtn.addEventListener('click', (e)=>{ if(!picking) return; idx = (idx+1)%THEMES.length; applyAndLabel(); });
    renderFooter();

    // setas virtuais via clique no texto central (apenas em modo picking)
    document.querySelector('.or').addEventListener('click', (e)=>{
      if (!picking) return;
      // clique à esquerda = prev, direita = next
      const mid = e.currentTarget.getBoundingClientRect().left + e.currentTarget.offsetWidth/2;
      if (e.clientX < mid){ idx = (idx-1+THEMES.length)%THEMES.length; }
      else { idx = (idx+1)%THEMES.length; }
      applyTheme(idx); orText.innerHTML = `&lt; ${LABELS[idx]} (${idx+1}/5) &gt;`;
    });

    // placeholders e labels já ajustados no HTML.
    // SSO: no próximo passo, os botões chamarão /api/oauth/google/start etc.
  </script>
</body>
</html>
