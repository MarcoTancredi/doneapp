<body>
  <div class="wrap">
    <div class="bar">
      <h2>Clientes</h2>
      <div class="cta">
        <button id="back">Voltar</button>
        <button id="admin">Admin</button>
      </div>
    </div>

    <div class="card">
      <table>
        <thead><tr><th>Cliente</th><th>Email</th><th>Ações</th></tr></thead>
        <tbody id="tbody"><tr><td colspan="3" class="muted">Carregando…</td></tr></tbody>
      </table>
    </div>
  </div>

  <script>
    const tbody = document.getElementById('tbody');
    document.getElementById('back').onclick = ()=>location.href='/web/login.html';
    document.getElementById('admin').onclick = ()=>location.href='/web/admin.html';

    function row(c){
      const tr = document.createElement('tr');
      tr.innerHTML = `
        <td>${c.name||c.username}</td>
        <td>${c.email||'—'}</td>
        <td>
          <button data-act="schedule">Agendar</button>
          <button data-act="grant">Autorizar outros</button>
          <button data-act="request">Pedir autorização</button>
        </td>`;
      tr.querySelector('[data-act="schedule"]').onclick = ()=>location.href='/web/scheduler.html?client='+encodeURIComponent(c.username);
      tr.querySelector('[data-act="grant"]').onclick = ()=>alert('Em desenvolvimento: conceder permissões a outro usuário.');
      tr.querySelector('[data-act="request"]').onclick = ()=>alert('Em desenvolvimento: solicitar permissão para publicar em nome de outro.');
      return tr;
    }

    (async ()=>{
      try{
        const r = await fetch('/api/me'); if(r.status===401){ location.href='/web/login.html'; return; }
        const me = await r.json();
        tbody.innerHTML = ''; tbody.appendChild(row({ username: me.username||'me', name: me.full_name||'Você', email: me.email||'' }));
      }catch(e){
        tbody.innerHTML = '<tr><td colspan="3" class="muted">Erro ao carregar.</td></tr>';
      }
    })();
  </script>
</body>
</html>
